<div class="login__box mx-auto my-5" style="width: 380px;">
    <div class="login__box__head font-weight-bold py-4 px-3 border-bottom">
        <p>Log In to Your Academy Account!!</p>
    </div>
    <div class="login__box__content">

        <form id="frmlogin" action='' method="POST">
            {{#if err_message}}
            <div class="form-group form-inline mt-1 bg-danger pt-3 pl-4 text-center text-white">
                <p>{{err_message}}</p>
            </div>
            {{/if}}
            <div class="form-group form-inline mt-3 mb-1 ">
                <input type="email" class="form-control form-control-lg pl-sm-5 w-100" id="inputEmail" name="email"
                    placeholder="Email" required autofocus>
                <i class="fa fa-lg fa-envelope position-absolute ml-3" aria-hidden="true"></i>
            </div>

            <div class="form-group form-inline my-1 ">
                <input type="password" class="form-control form-control-lg pl-sm-5 w-100" id="inputPassword"
                    name="password" placeholder="Password" required>
                <i class="fa fa-key fa-lg position-absolute ml-3" aria-hidden="true"></i>
            </div>
            <button type="submit" class="btn btn-primary w-100 mt-1">Log In</button>
        </form>
    </div>
</div>