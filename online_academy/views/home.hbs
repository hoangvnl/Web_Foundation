{{/section}}

<div>


    <div id="demo" class="carousel slide mx-auto w-75 h-40" data-ride="carousel">

        <!-- Indicators -->
        <ul class="carousel-indicators">
            <li data-target="#demo" data-slide-to="0" class="active"></li>
            <li data-target="#demo" data-slide-to="1"></li>
        </ul>

        <!-- The slideshow -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="welcomeImg" src="/public/images/welcome1.jpg" alt="Welcome">
            </div>
            <div class="carousel-item">
                <img class="welcomeImg" src="/public/images/welcome2.jpg" alt="Welcome">
            </div>

        </div>


        <!-- Left and right controls -->
        <a class="carousel-control-prev" href="#demo" data-slide="prev">
            <span class="fa fa-angle-double-left" style="color:cyan; font-size:3rem"></span>
        </a>
        <a class="carousel-control-next" href="#demo" data-slide="next">
            <span class="fa fa-angle-double-right" style="color:cyan; font-size:3rem"></span>
        </a>

    </div>
</div>

<div class="container">
    <h3>TOP 3 COURSES OF WEEK</h3>

    <div class="">
        {{#each courseOfTheWeek}}
        <a class="btn card text-left d-inline-flex" style="width: 22.8rem; height: 29rem;" href="/course/{{CourseName}}"
            role="button">
            <img src="/public/{{CourseImage}}" class="card-img-top" alt="{{CourseName}}">
            <div class="card-body">
                <div class="cardInf" style="height: 10rem;">
                    <h6 class="card-title">{{CourseName}}</h6>
                    <p style="font-size: 0.8rem;">{{lecturerName}}</p>
                    <p style="font-size: 0.8rem;color: orange;">
                        <span style="color:orange">{{formatRate rate}} </span>
                        {{> ratingStar}}
                        <i>({{formatCount StudentCount}})</i>
                    </p>
                    <p style="font-size: 0.8rem;">
                        {{#compare SalePrice -1}}
                        <b> ${{formatMoney Price}}</b><br><br>
                        {{/compare}}
                        {{#compare SalePrice -1 operator=">"}}
                        <b> ${{formatMoney SalePrice}}</b><br><br>
                        <del>${{formatMoney Price}}</del>
                        {{/compare}}
                    </p>
                </div>
                {{#compare isBestSeller 1}}
                <p class="badge badge-warning mt-5 text-left d-inline-block ">Bestseller</p>
                {{/compare}}
                {{#compare isNew 1}}
                <p class="badge badge-danger mt-5 text-left d-inline-block ">New</p>
                {{/compare}}
            </div>
        </a>
        {{/each}}
    </div>
</div>

