<div class="container">
    <h1>TOP 10 COURSES OF ALL CATEGORIES</h1>
    <div id="carouselTop10AllControls" class="carousel slide w-100" data-ride="carousel">
        <div class="carousel-inner d-inline-flex justify-content-between">
            <div class="carousel-item active">
                <div class="col-sm"></div>
                {{#each first4AllCat}}
                <a class="btn card text-left d-inline-flex" style="width: 17rem; height: 27rem;"
                    href="/course/{{CourseName}}" role="button">
                    <img src="/public/{{CourseImage}}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h6 class="card-title">{{CourseName}}</h6>
                        <p style="font-size: 0.8rem;">{{lecturerName}}</p>
                        <p style="font-size: 0.8rem;color: orange;">
                            <span style="color:rgb(189, 125, 8)">{{formatRate rate}} </span>
                            {{> ratingStar}}
                            <i>({{formatCount StudentCount}})</i>
                        </p>
                        <p style="font-size: 0.8rem;">
                            {{#compare SalePrice -1}}
