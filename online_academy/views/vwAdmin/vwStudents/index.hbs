<div class="p-2 bg-muted">
    <div class="card  mb-100 shadow">
        <h5 class="card-header bg-dark text-light d-flex justify-content-between">
            Students Management
        </h5>
      {{#if this.empty}}
        <div class="card-body">
          <p class="card-text">
            Không có dữ liệu.
          </p>
        </div>
      {{else}}
        <div class="card-body">
          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">
                  ID
                </th>
                <th scope="col">
                  Student's Name
                </th>
                <th scope="col">
                  Email
                </th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody>
              {{#each this.students}}
                <tr>
                  <th scope="row">
                    {{UserID}}
                  </th>
                  <td>
                    {{UserName}}
                  </td>
                  <td>
                      {{Email}}
                  </td>
                  
                  <td class="text-right">
                    <a
                      class="btn btn-sm btn-dark"
                      href="/admin/students/{{UserID}}"
                      role="button"
                      title="Edit Accounts"
                    >
                      <i class="fas fa-user-edit    "></i>
                    </a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      {{/if}}
      
      {{! <div class="card-footer text-muted">
    Footer
  </div> }}
    </div>
  </div>