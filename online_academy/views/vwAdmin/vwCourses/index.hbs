<div class="card">
  <h5 class="card-header">
    Courses
  </h5>
  {{#if this.empty}}
  <div class="card-body">
    <p class="card-text">Không có dữ liệu.</p>
  </div>
  {{else}}
  <div class="card-body">
    <div class="row">
      {{#each this.courses}}
      <div class="col-sm-4 mb-3">
        <div class="card h-100">
          <img src="/public/{{CourseImage}}" class="card-img-top" alt="{{ProName}}"
            title="{{CourseName}}">
          <div class="card-body">
            <h6 class="card-title">{{CourseName}}</h6>
            <h5 class="card-title text-danger">{{formatMoney Price}}</h5>
            <p class="card-text">
              {{ShortDes}}
            </p>
          </div>
          <div class="card-footer">
            <a class="btn btn-sm btn-outline-primary" href="#" role="button">
              <i class="fa fa-eye" aria-hidden="true"></i>
              Details
            </a>
            <a class="btn btn-sm btn-outline-success" href="#" role="button">
              <i class="fa fa-shopping-cart" aria-hidden="true"></i>
              Add to cart
            </a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
  {{/if}}
  <div class="card-footer text-muted">
    Footer
  </div>
</div>