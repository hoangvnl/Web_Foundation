<div class="card">
  <h5 class="card-header d-flex justify-content-between">
    Subcategories
    <a class="btn btn-outline-dark" href="/admin/subcategories/add" role="button">
      <i class="fa fa-plus" aria-hidden="true"></i>
      Add Subcategory
    </a>
  </h5>
  {{#if this.empty}}
  <div class="card-body">
    <p class="card-text">Không có dữ liệu.</p>
  </div>
  {{else}}
  <div class="card-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Subcategory</th>
          <th scope="col">CategoryID</th>
          <th scope="col">&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        {{#each this.subcategories}}
        <tr>
          <th scope="row">{{SubcategoryID}}</th>
          <td>{{SubcategoryName}}</td>
          <td>{{CategoryID}}</td>
          <td class="text-right">
            <a class="btn btn-sm btn-dark" href="/admin/subcategories/{{SubcategoryID}}" role="button" title="Edit Category">
              <i class="fas fa-pencil-alt"></i>
            </a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  {{/if}}
  {{!-- <div class="card-footer text-muted">
    Footer
  </div> --}}
</div>