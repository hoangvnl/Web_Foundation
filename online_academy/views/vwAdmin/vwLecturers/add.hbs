<form method="POST">
  <div class="card">
    <h5 class="card-header">
      Add Lecturer
    </h5>
    <div class="card-body">
      <div class="form-group">
        <label for="txtLecturerName">Lecturer Name</label>
        <input type="text" class="form-control" id="txtLecturerName" name="LecturerName"  autofocus>
      </div>
      <div class="form-group">
        <label for="txtUserID">AccountID</label>
        <select name="UserID" id="txtUserID" class="form-control">
            <option value="0" selected>--</option>
            {{#each this.users}}
                <option value="{{UserID}}">{{UserID}}</option>
            {{/each}}
        </select>
      </div>
      
      

    </div>
    <div class="card-footer text-muted">
      <a class="btn btn-outline-secondary" href="/admin/lecturers" role="button">
        <i class="fa fa-backward" aria-hidden="true"></i>
        Back to List
      </a>
      <button type="submit" class="btn btn-dark" formaction="/admin/lecturers/add">
        <i class="fa fa-check" aria-hidden="true"></i>
        Add
      </button>
    </div>
  </div>
</form>