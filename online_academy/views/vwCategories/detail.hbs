<script>
    function changeDisplay() {
        var scroll = $(window).scrollTop();

        if (scroll >= 155) {
            $('#sideBar').removeClass('position-absolute')
                .addClass("sticky-top");
        } else {
            $('#sideBar').removeClass("sticky-top")
