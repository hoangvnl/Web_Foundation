{{#section 'css'}}
<style>
    .mainContent {
        margin: 4rem 8rem;
    }

    .content {
        margin-top: 1rem;
    }

    a:hover {
        text-decoration: none;
        color: black;
    }

    .courseCard {
        border-bottom: whitesmoke;
        margin-top: 1rem;
        padding-bottom: 1rem;
        border-style: none none solid none;
        display: flex;
    }

    .courseName {
        font-size: 1.4rem;
        color: lightslategray;
    }

    .info>div>p {
        color: black;

    }

    .info>.courseCost {
        line-height: 0.7rem;
    }

    .instructor {
        color: gray;
    }

    .rate {
        color: orange;
        font-size: 1.2rem;
        line-height: 1rem;
    }

    .rateCount {
        color: gray;
        line-height: 1rem;
        margin-left: 1rem;
    }

    .img {
        width: 30rem;
        height: 17rem;
        margin-right: 1rem;
    }

    img {
        width: 100%
    }
</style>
{{/section}}
<div class="mainContent">
    {{#if this.empty}}
    <h1>Sorry, we couldn't find any results for "{{this.searchText}}"</h1>
    {{else}}

    {{#if this.isSearch}}
    <h1>Results for “{{this.searchText}}”:</h1>
    {{else}}
    <h1>All {{#each this.category}}
        {{CategoryName}} {{SubcategoryName}}
        {{/each}} Courses</h1>
    {{/if}}



    {{/if}}
    <div class="d-flex">
        {{#if this.isSearch}}
        <div class="filter">
            <p>hoho</p>
        </div>
        {{/if}}
        <div class="content">
            {{#each this.course}}

            <a name="" id="" class="" href="/course/{{CourseName}}" role="button">
                <div class="courseCard">
                    <div class="img">
                        <img src="/public/{{CourseImage}}" alt="">
                    </div>
                    <div class="info w-100 d-flex">
                        <div style="padding-right: 20rem; width: 50rem;">
                            <p><b class="courseName">{{CourseName}}</b></p>
                            <p class="category">{{catName}}</p>
                            <p class="instructor">
                                {{lecturerName}}
                            </p>
                            <div class="d-block">
                                <div class="rate d-flex text-center">
                                    <b>{{formatRate rate}}</b>
                                    {{> ratingStar}}
                                    <div class="rateCount">
                                        ({{formatCount StudentCount}})
                                    </div>
                                </div>
                                <p class="badge badge-warning mt-5 text-left d-inline-block ">Bestseller</p>
                            </div>
                        </div>
                        <div class="courseCost d-flex mt-4 text-right">
                            <p>
                                {{#compare SalePrice -1}}
                                <b> ${{formatMoney Price}}</b><br><br>
                                {{/compare}}
                                {{#compare SalePrice -1 operator=">"}}
                                <b> ${{formatMoney SalePrice}}</b><br><br>
                                <del>${{formatMoney Price}}</del>
                                {{/compare}}
                            </p>
                        </div>
                    </div>
                </div>
            </a>
            {{/each}}

        </div>

    </div>
</div>